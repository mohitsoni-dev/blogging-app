<%- include("partials/header") %>

<div class="formDiv">
    <form action="/users/login" method="post">
        <div class="container1">
            <h1>Login</h1>
            <label for="inputEmail"><b>Username</b></label>
            <input id="inputEmail" type="email" placeholder="Enter Username" name="email" required>
        
            <label for="inputPassword"><b>Password</b></label>
            <input id="inputPassword" type="password" placeholder="Enter Password" name="password" required>
        
            <button type="submit">Login</button>
        </div>
      
        <div class="container1" style="background-color:#f1f1f1">
          <button type="button" class="cancelbtn">Cancel</button>
          <span class="lowerText">Doesn't have an account? <a href="/users/register">Sign up.</a></span>
        </div>
    </form>
</div>

<%- include("partials/footer") %>