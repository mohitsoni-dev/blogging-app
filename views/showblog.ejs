<%- include("partials/header") %>

<div class="container showblogContainer">
    <div class="blogshow margin-top-0 margin-bottom-0">
        <h1 class="margin-top-0"><%= blog[0].title %></h1>
        <h3><%= blog[0].author %> on <%= blog[0].dateofPublish %></h3>
        <img class="blogImages showImage" src="<%= blog[0].imgURL %>" alt="blog image"><br>
        <% if (blog[0].userEmail === user.email) { %> 
        <div class="edDiv">
            <a class="readMore-btn" href="/blogs/<%= blog[0].id %>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= blog[0].id %>?_method=DELETE" method="POST">
                <button class="delete-btn">Delete</button>
            </form>
        </div>
    <% } %> 
        <p><%= blog[0].blogText %></p>
    </div>
    
</div>



<%- include("partials/footer") %>