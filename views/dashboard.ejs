<%- include("partials/header") %>

  <!-- Top Navbar -->
  <div class="topnav">
    <a id="homeNav" class="active" href="/dashboard"><i class="fas fa-blog"></i> Get Blogged</a>
    <a href="/users/newblog">New Post</a>
    <a id="signinLink" href="/logout">Log out</a>
  </div>

  <!-- Flash Message -->
  <% if (message && message.length > 0) { %> 
  <div id="flashDiv" class="flash welcome">
    <%= message %> 
  </div>
<% } %>
<% if (message2 && message2.length > 0) { %> 
  <div id="flashDiv" class="flash welcome">
    <%= message2 %> 
  </div>
<% } %>

  <!-- Side Navigation Section -->
  <div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a href="/dashboard">All</a>
    <a href="/dashboard/technology">Technology</a>
    <a href="/dashboard/health">Health</a>
    <a href="/dashboard/business">Business</a>
    <a href="/dashboard/food">Food</a>
    <a href="/dashboard/culture">Culture</a>
    <a href="/dashboard/travel">Travel</a>
    <a href="/dashboard/videogames">Video Games</a>
    <a href="/dashboard/science">Science</a>
    <a href="/dashboard/relationships">Relationships</a>
    <a href="/dashboard/politics">Politics</a>
  </div>

  <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; Open</span>

  <!-- Blogs -->
  <% if (blogs.length == 0) { %>
    <h1 id="noBlogH1">Sorry!! No Blogs Found!!</h1>
  <% } else { %>  
    <div class="container">
      <% blogs.forEach(function(blog){ %>
        <div class="blogDiv">
          <h2 class="blogDetails"><%= blog.title %></h2>
          <img class="blogImages" src="<%= blog.imgURL %>" alt="blogImage"><br>
          <div class="blogDetails">
            <span id="author-span">By <%= blog.author %> on <%= blog.dateofPublish %></span>
            <span id="category-span">Category: <%= blog.category %></span>
            <p class="blogText"><%= blog.blogText.substring(0, 100) %>...</p>
            <a class="readMore-btn" href="/blog/<%= blog.id %> ">Read More</a>
          </div>
        </div>
        <hr>
      <% }); %> 
    </div>
  <% } %> 

  <!-- JS Scripts -->
  <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  <script src="scripts/dashboard.js"></script>

<%- include("partials/footer") %>