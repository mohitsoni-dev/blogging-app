<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="stylesheets/dashboard.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/common.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/common.css">
</head>
<body>

  <div class="topnav">
    <a id="homeNav" class="active" href="/dashboard"><i class="fas fa-blog"></i> Get Blogged</a>
    <a href="#contact">Contact</a>
    <a href="#about">About</a>
    <a href="/users/newblog">New Post</a>
    <a id="signinLink" href="/logout">Log out</a>
  </div>

  <div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a href="#">About</a>
    <a href="#">Services</a>
    <a href="#">Clients</a>
    <a href="#">Contact</a>
  </div>

  <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; open</span>

  <div class="container">
    <% blogs.forEach(function(blog){ %>
      <div class="blogDiv">
        <h2 class="blogDetails"><%= blog.title %></h2>
        <img class="blogImages" src="<%= blog.imgURL %>" alt="blogImage"><br>
        <div class="blogDetails">
          <span>By <%= blog.author %> on <%= blog.dateofPublish %></span>
          <div id="likeBtn">
            <i id="likeIcon" class="fas fa-thumbs-up"></i>
            <span><%= blog.likes %> likes</span>
          </div>
          <br>
          <span>Category: <%= blog.category %></span>
          <p class="blogText"><%= blog.blogText.substring(0, 100) %>...</p>
          <a class="readMore-btn" href="/blog/<%= blog.id %> ">Read More</a>
        </div>
      </div>
      <hr>
    <% }); %> 
  </div>

  <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  <script src="scripts/dashboard.js"></script>

<%- include("partials/footer") %>